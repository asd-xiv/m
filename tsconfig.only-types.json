{
  "include": ["src"],
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "stripInternal": true,

    // "incremental" emits also a temp cache file, which we dont want published
    "incremental": false
  }
}
